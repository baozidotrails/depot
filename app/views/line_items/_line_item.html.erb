<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.product.title %></td>
  <td><%= line_item.quantity %></td>
  <td><%= number_to_currency line_item.total_price %></td>
  <td>
    <%= link_to '&times;'.html_safe, line_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
  </td>
</tr>